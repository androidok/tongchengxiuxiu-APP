<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.pinhongbao.fragmet.RedhallFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/groundback_head"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/login"
            android:layout_width="0dp"
            android:text="登录"
            android:textColor="@color/color_while"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text="红包大厅"
            android:textSize="20sp"
            android:textColor="@color/color_while"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/inti"
            android:layout_width="0dp"
            android:text="我要发起"
            android:layout_weight="1"
            android:textColor="@color/color_while"
            android:gravity="right"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_nojoin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:text="未参与"
            android:textSize="15sp"
            android:textColor="@color/color_while"
            android:background="@drawable/shape_no_join_selector"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/btn_join"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="已参与"
            android:textSize="15sp"
            android:background="@drawable/shape_join_default"
            android:textColor="@color/color_jnon_selector"
            android:layout_marginRight="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
         <FrameLayout
             android:id="@+id/redhall_famelayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
</FrameLayout>
