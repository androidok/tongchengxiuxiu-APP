<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pinhongbao.activity.RegisterActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/layout_actionbar"
        ></include>
    <EditText
        android:id="@+id/ed_phonenum"
        android:layout_width="match_parent"
        android:background="@drawable/shape_edittext_login_account"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:hint="请输入手机号"
        android:textSize="13sp"
        android:textColorHint="@color/color_gray"
        android:paddingLeft="10dp"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:background="@drawable/shape_edittext_login_account"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:hint="请输入设置密码"
        android:textSize="13sp"
        android:textColorHint="@color/color_gray"
        android:paddingLeft="10dp"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/ed_passworded"
        android:layout_width="match_parent"
        android:background="@drawable/shape_edittext_login_account"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/color_gray"
        android:hint="请再输入一遍密码"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_edittext_login_account"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="请输入验证码"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textColorHint="@color/color_gray"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="获取验证码"
            android:textSize="13sp"
            android:background="@drawable/shape_getphonecode"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="确定"
        android:textColor="#ffffff"
        android:background="@drawable/shape_button_login_selector"
        android:layout_height="40dp"/>
</LinearLayout>
