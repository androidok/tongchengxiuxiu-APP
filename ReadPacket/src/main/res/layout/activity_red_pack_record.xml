<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_red_pack_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_jnon_selector"
    android:orientation="vertical"
    tools:context="com.pinhongbao.activity.RedPackRecordActivity">

    <include
        layout="@layout/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="270dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="2017年"
                android:textColor="@color/color_while"
                android:drawableRight="@mipmap/right_while"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_choose"
                android:layout_width="wrap_content"
                android:text="全部"
                android:textColor="@color/color_while"
                android:drawableRight="@mipmap/right_while"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/redpackrecod"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:text="0.00"
            android:textColor="#FFB90F"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="继续加油!"
            android:textColor="#FFB90F"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="40dp">
            <Button
                android:id="@+id/tv_hong"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="活动红包0.00元"
                android:textColor="@color/color_while"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/redpackrecod_left"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/tv_tou"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="投入红包0.00元"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_while"
                android:background="@drawable/redpackrecod_right"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_while"
        android:layout_height="match_parent">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#19000000"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrListViewExtrasEnabled="false"
            ptr:ptrMode="both"
            ptr:ptrScrollingWhileRefreshingEnabled="true">
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

    </RelativeLayout>

</LinearLayout>
