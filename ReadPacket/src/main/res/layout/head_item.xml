<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="2017年"
            android:textColor="@color/color_while"
            android:drawableRight="@mipmap/right_while"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="全部"
            android:textColor="@color/color_while"
            android:drawableRight="@mipmap/right_while"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:background="@mipmap/redpackrecod"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="0.00"
        android:textColor="#FFB90F"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="你还没有收入，快去参与吧!"
        android:textColor="#FFB90F"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="活动红包0.00元"
            android:textColor="@color/color_while"
            android:background="@drawable/redpackrecod_left"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="投入红包0.00元"
            android:textColor="@color/color_while"
            android:background="@drawable/redpackrecod_right"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
